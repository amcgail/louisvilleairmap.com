<div class="row">
  <div class="col-lg-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Data Visualzation Wizard</h3>
      </div>
      <div class="panel-body">
      
        <div class="wizardify">
          <ul>
            <li><a href="#tab1" data-toggle="tab"><span class="label">1</span> Choose Data</a></li>
            <li><a href="#tab2" data-toggle="tab"><span class="label">2</span> Choose Visualization Engine</a></li>
            <li><a href="#tab3" data-toggle="tab"><span class="label">3</span> Query &amp; See</a></li>
          </ul>
          <div class="tab-content">
            <hr />
            <div class="tab-pane" id="tab1">
              <div class="form-group">
                <label>First, let's choose dataset resource(s) to visualize:</label>
                <% META.each do |key,dataset| %>
                  <div class="checkbox">
                    <label><input data-resource-id='<%= dataset["extras_hash"]["default_resource_id"] or dataset["resources"].first["id"] %>' name='resource-choose-<%= key %>' type="checkbox" data-dataset-key="<%= key %>" class='resource-choose'><%= dataset["title"] %></label>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="tab-pane" id="tab2">
              <div class="form-group">
                <label>Now choose a visualization type</label>
                <% [{"name" => "Recline (tables, graphs, and maps)", "value" => "recline"}].each do |view_type| %>
                  <div class="radio">
                    <label><input type="radio" name="view_type-choose" chedked value="<%= view_type["value"] %>"><%= view_type["name"] %></label>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="tab-pane" id="tab3">
              <div class="sql-examples">
                <label>SQL Query Examples</label>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>SQL</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
              </div>

              <div class="data-view"></div>
            </div>
            <hr />
            <ul class="pager wizard">
              <li class="previous first" style="display:none;"><a href="#">First</a></li>
              <li class="previous"><a href="#">Previous</a></li>
              <li class="next last" style="display:none;"><a href="#">Last</a></li>
              <li class="next"><a href="#">Next</a></li>
            </ul>
          </div>  
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-3">
    <div id="wizard-data" class="panel panel-default">
    </div>

  </div>

</div>


