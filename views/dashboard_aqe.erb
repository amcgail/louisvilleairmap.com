<div class="row">

  <div class="col-lg-12">

    <h1>Focus Air Quality Egg Dashboard</h1>
    <hr />
    <div class="table-response">
			<table class="table">
				<tr>
					<td><h4><%= @focus_ids.size %> Sites Expected</h4></td>
					<td class="success"><h4><span class="num-sensors-live">0</span> Live</h4></td>
					<td class="warning"><h4><span class="num-sensors-frozen">0</span> Frozen</h4></td>
					<td class="danger"><h4><span class="num-sensors-not_found">0</span> Not Found</h4></td>
				</tr>
	    </table>
    </div>

	<hr />

	<div class="pull-right">
		<a class='btn btn-outline btn-primary' target='blank' href='/wizard?#&amp;datasets=aqe&amp;sql=<%= URI.encode(@sql) %>&amp;viewName=grid'>Shortcut to Data Viz Wizard for these Eggs</a>
	</div>

	<h2>Site Details</h2>	

	<div class="table-responsive">
		<table class="dataTableify table table-striped table-bordered table-hover">
			<thead>
			  <tr>
			    <th>Sensor ID</th>
			    <th>Sensor Name/Description</th>
			    <th>Sensor Status</th>
			    <th>Sensor Created</th>
			    <th>Latest Data</th>
			  </tr>
		  </thead>
		  <tbody>
			  <% @focus_ids.each do |focus_id| %>
			    <tr data-sensor-id="<%= focus_id %>" data-sensor-type="aqe" data-detail-level="dashboard" >
			      <td><a href='/aqe/<%= focus_id %>'>AQE #<%= focus_id %></a></td>
			      <td><strong class="sensor-title"></strong></td>
			      <td><span class="sensor-status"></span></td>
			      <td><span class="sensor-created_at"></span></td>
			      <td>Loading data for this sensor</td>
			    </tr>
			  <% end %>
		  </tbody>
		</table>
	</div>

  </div>
</div>